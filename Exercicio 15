#include <stdio.h>

int main( ){
  
  int i,j,n;
  
  printf("Digite um valor: ");
  scanf("%d",&n);
  if(n>=2)
  {
    for (i=1;i<=n;i++)
    {
      for(j=1;j<=i;j++)
        {
          printf("#");
        }
      printf("\n");
    }
  }
  else
  {
    printf("\nERROR: (Digite um valor inteiro maior ou igual a 2!)");
  }
 return 0; 
}
