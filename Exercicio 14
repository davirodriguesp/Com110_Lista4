#include <stdio.h>

int main() 
{
  int x,maior, menor;
  maior=0;
  menor=0;
  
  do
  { 
    printf("Digite um valor: ");
    scanf("%d", &x);
    if (x>maior)
    { 
      maior=x;
      
    }
    if (x < menor){
      menor=x;
    }

  } while (x>0);

  printf("\nO maior valor digitado é: %d", maior);
  printf("\nO menor valor digitado é: %d", menor);



    return 0;
