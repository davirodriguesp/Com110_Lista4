#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() 
{
    int a,r;
    
    printf("Escolha: A(1), B(2) ou C(3) : ");
    scanf("%d",&r);
    
    if (r==1)
    {
      for(a=1;a<=20;a++)
      {   
          printf("\n %d",a);
      }  
    }
    if(r==2)
    {
      for(a=20;a>=1;a--)
      { 
         printf("\n %d",a);

      }  
    } 
    if (r==3)
    {
      for(a=1;a<=20;a+=2)
      {   
          printf("\n %d",a);
      }  
    }
    return 0;
